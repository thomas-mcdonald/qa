<!DOCTYPE html>
<html>
  <head>
    <title>QA</title>
    <%= stylesheet_link_tag :application %>
    <%= javascript_include_tag :application %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <%= link_to "QA", "/", class: :brand %>
          <ul class="nav">
            <li><%= link_to 'Ask Question', new_question_path %></li>
          </ul>
          <ul class="nav pull-right">
            <% if logged_in? %>
              <li>
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %> <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to 'Your Profile', current_user, tabindex: '-1' %></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to "Login", login_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>